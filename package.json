{
	"name": "vite-starter",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build --emptyOutDir && html-beautify dist/*.html -r && html-beautify dist/**/*.html -r",
		"preview": "vite preview",
		"lint:all": "npm run lint:stylelint && npm run lint:biome",
		"lint:stylelint": "stylelint 'src/**/*.(scss|css)' --fix",
		"lint:biome": "biome lint --apply ./ && biome format --write ./",
		"format:html": "html-beautify dist/*.html -r && html-beautify dist/**/*.html -r",
		"convert-webp": "sh bin/convert-webp.sh",
		"deploy:develop": "sh bin/deploy.sh develop",
		"deploy:production": "sh bin/deploy.sh production",
		"prepare": "cp .env.example .env && lefthook install"
	},
	"dependencies": {
		"autoprefixer": "^10.4.19",
		"sass": "^1.77.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.10"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.3",
		"glob": "^10.4.0",
		"js-beautify": "^1.15.1",
		"lefthook": "^1.6.18",
		"stylelint": "^16.6.1",
		"stylelint-config-recess-order": "^5.0.1",
		"stylelint-config-recommended-scss": "^14.0.0",
		"stylelint-order": "^6.0.4",
		"vite-plugin-ejs": "^1.7.0"
	},
	"volta": {
		"node": "20.12.2"
	},
	"browserslist": ["last 2 version", "> 1%", "not dead"]
}
